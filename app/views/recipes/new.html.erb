<h1>レシピ新規投稿</h1>

<%= form_with model: @recipe, local: true do |f| %>
  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :content, "作り方（内容）" %><br>
    <%= f.text_area :content %>
  </div>
  
  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>